<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="15dp">


    <ImageView
        android:id="@+id/ivProfile"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvUsername"
        android:layout_marginTop="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ivProfile"
        android:text="TextView"
        android:textSize="6pt"
        tools:text="christina" />


    <ImageButton
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_baseline_more_vert_24"
        android:layout_width="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"
        android:layout_height="wrap_content" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvPost"
        android:layout_below="@+id/ivProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        app:cardCornerRadius="20dp"
        android:layout_marginBottom="8dp"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="8dp"
                tools:text="loving this song!!" />

            <ImageView
                android:id="@+id/albumCover"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_below="@+id/tvDescription"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="10dp"
                android:visibility="gone"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/tvPostTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDescription"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:visibility="gone"
                android:layout_toRightOf="@+id/albumCover"
                android:textStyle="bold"
                android:textSize="8pt"
                android:layout_marginVertical="8dp"
                android:text="Yellow"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tvPostArtist"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvPostTitle"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="15dp"
                android:layout_toRightOf="@+id/albumCover"
                android:textSize="5pt"
                android:layout_marginVertical="3dp"
                android:text="Coldplay"
                android:textAlignment="center" />

            <ImageButton
                android:id="@+id/ibPlay"

                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_below="@+id/tvDescription"
                android:visibility="gone"
                android:layout_marginLeft="15dp"
                android:src="@drawable/ic_round_play_arrow_24"
                android:background="@android:color/transparent"
                android:scaleX="2"
                android:scaleY="2"
                app:tint="@color/grey" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


    <ImageButton
        android:id="@+id/like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cvPost"
        android:background="@null"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/ic_baseline_favorite_border_24" />

    <TextView
        android:id="@+id/numLikes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cvPost"
        android:layout_toRightOf="@+id/like"
        android:text="0 likes" />

</RelativeLayout>


